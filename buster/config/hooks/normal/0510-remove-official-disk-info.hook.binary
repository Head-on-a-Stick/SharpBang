#!/bin/sh

set -e

## THIS VERSION FOR STRETCH BUILD ##
# (binary hooks are run in binary/ in live-build >= 5.0~a9-1
#   but in lb root dir previously)

# script to replace "Official Snapshot" in binary/.disk/info with "Snapshot"

echo "Running $0"

file=.disk/info

if ! [ -w "$file" ]
then
	exit 0
fi

sed -i 's|Official Snapshot|Snapshot|' "$file"
